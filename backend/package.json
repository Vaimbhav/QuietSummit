{
	"name": "quietsummit-backend",
	"version": "1.0.0",
	"description": "QuietSummit Backend API - Express + MongoDB",
	"main": "dist/index.js",
	"type": "commonjs",
	"scripts": {
		"dev": "nodemon src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"start:prod": "NODE_ENV=production node dist/index.js",
		"lint": "eslint src --max-warnings 0",
		"format": "prettier --write \"src/**/*.ts\"",
		"type-check": "tsc --noEmit",
		"clean": "rm -rf dist",
		"prebuild": "npm run clean"
	},
	"keywords": [
		"travel",
		"api",
		"express",
		"mongodb",
		"typescript"
	],
	"author": "QuietSummit Team",
	"license": "MIT",
	"packageManager": "pnpm@10.14.0",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"@types/bcrypt": "^6.0.0",
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^22.0.0",
		"@types/passport": "^1.0.17",
		"@types/passport-google-oauth20": "^2.0.17",
		"bcrypt": "^6.0.0",
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"duck-duck-scrape": "^2.2.7",
		"express": "^4.21.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^8.2.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.3",
		"mongoose": "^9.1.2",
		"passport": "^0.7.0",
		"passport-google-oauth20": "^2.0.0",
		"razorpay": "^2.8.10",
		"winston": "^3.14.2",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.52.0",
		"eslint": "^9.39.2",
		"nodemon": "^3.1.11",
		"prettier": "^3.7.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	}
}
